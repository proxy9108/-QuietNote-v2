{
  "manifest_version": 3,
  "name": "QuietNote - Secure Sticky Notes",
  "version": "2.0.0",
  "description": "Enterprise-grade encrypted sticky notes with customizable security settings",
  "author": "proxy9108",
  "homepage_url": "https://github.com/proxy9108/QuietNote",
  "icons": {
    "16": "assets/icons/icon-16.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "clipboardRead",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "ui/popup.html",
    "default_title": "QuietNote - Open Vault",
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "48": "assets/icons/icon-48.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": ["styles/content.css"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content/injected.js", "assets/icons/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "new-page-note": {
      "suggested_key": {
        "default": "Ctrl+Shift+N",
        "mac": "Command+Shift+N"
      },
      "description": "Create a new page note"
    },
    "open-vault": {
      "suggested_key": {
        "default": "Ctrl+Shift+V",
        "mac": "Command+Shift+V"
      },
      "description": "Open the personal notes vault"
    },
    "lock-now": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Lock notes immediately"
    },
    "toggle-sidebar": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Toggle notes sidebar"
    }
  },
  "minimum_chrome_version": "120",
  "minimum_firefox_version": "120"
}
