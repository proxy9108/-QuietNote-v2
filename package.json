{
  "name": "quietnote-v2",
  "version": "2.0.0",
  "description": "Enterprise-grade encrypted sticky notes browser extension with customizable security",
  "main": "background/background.js",
  "type": "module",
  "scripts": {
    "test": "node --test tests/**/*.test.js",
    "test:watch": "node --test --watch tests/**/*.test.js",
    "test:crypto": "node --test tests/crypto.test.js",
    "test:storage": "node --test tests/storage.test.js",
    "test:pin": "node --test tests/pin-validation.test.js",
    "lint": "eslint . --ext .js,.ts --ignore-path .gitignore",
    "format": "prettier --write .",
    "build:chrome": "npm run build:prepare && zip -r QuietNote-v2-chrome.zip . -x 'docs/*' 'tests/*' '.git/*' 'node_modules/*' '.env*' '*.md'",
    "build:firefox": "npm run build:prepare && zip -r QuietNote-v2-firefox.zip . -x 'docs/*' 'tests/*' '.git/*' 'node_modules/*' '.env*' '*.md' && mv manifest-firefox.json manifest.json",
    "build:prepare": "echo 'Preparing build...'",
    "security:audit": "npm audit --audit-level=high",
    "docs": "echo 'QuietNote v2 Documentation' && echo 'See README.md and docs/ folder'",
    "version": "echo QuietNote v2.0.0"
  },
  "keywords": [
    "browser-extension",
    "sticky-notes",
    "security",
    "encryption",
    "privacy",
    "aes-gcm",
    "pbkdf2",
    "chrome-extension",
    "firefox-addon",
    "offline"
  ],
  "author": "proxy9108",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/proxy9108/QuietNote-v2.git"
  },
  "bugs": {
    "url": "https://github.com/proxy9108/QuietNote-v2/issues"
  },
  "homepage": "https://github.com/proxy9108/QuietNote-v2#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "eslint": "^8.54.0",
    "prettier": "^3.1.0"
  },
  "dependencies": {},
  "optionalDependencies": {
    "@types/chrome": "^0.0.259"
  }
}
